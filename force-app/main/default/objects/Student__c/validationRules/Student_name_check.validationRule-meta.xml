<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Student_name_check</fullName>
    <active>false</active>
    <errorConditionFormula>IF(
     REGEX( Student_Name__c , &apos;^[A-Za-z]+$&apos;) , 

    false, 
 
    true
)</errorConditionFormula>
    <errorDisplayField>Student_Name__c</errorDisplayField>
    <errorMessage>Student Should not contain numbers of any special character.</errorMessage>
</ValidationRule>
